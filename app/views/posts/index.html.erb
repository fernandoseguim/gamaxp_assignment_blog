<% @posts.reverse_each do |post| %>
<article class="post">
  <header>
    <div class="title">
      <h2>
        <a href="#"><%= post.title %></a>
      </h2>
      <p><%= post.categorie %></p>
    </div>
    <div class="meta">
      <time class="published" datetime="2015-11-01"><%= post.updated_at.strftime("%d-%m-%Y") %></time>
      <a href="#" class="author">
        <span class="name"><%= post.author %></span><img src="/assets/avatar.jpg" alt=""/></a>
    </div>
  </header>
  <a href="#" class="image featured"><img src="/assets/pic01.jpg" alt=""/></a>
  <p><%= post.description %></p>
  <footer>
    <ul class="actions">
      <li>
        <%= link_to 'Continue lendo', post, class: "button big" %>
      </li>
    </ul>
    <ul class="stats">
      <li>
        <a href="#">General</a>
      </li>
      <li>
        <a href="#" class="icon fa-heart">28</a>
      </li>
      <li>
        <a href="#" class="icon fa-comment">128</a>
      </li>
    </ul>
  </footer>

</article>
<% end %>

<ul class="actions pagination">
  <li>
    <a href="" class="disabled button big previous">Pagina anterior</a>
  </li>
  <li>
    <a href="#" class="button big next">Próxima página</a>
  </li>
</ul>
